# WhatsClone Client - Variáveis de Ambiente

# ===========================================
# API CONFIGURATION
# ===========================================

# URL da API do backend
VITE_API_URL=http://localhost:5000/api

# URL do Socket.io
VITE_SOCKET_URL=http://localhost:5000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Porta do servidor de desenvolvimento
VITE_PORT=3000

# Host do servidor de desenvolvimento
VITE_HOST=localhost

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Ambiente de build (development, production)
VITE_NODE_ENV=development

# Habilitar source maps em produção
VITE_GENERATE_SOURCEMAP=true

# ===========================================
# FEATURES FLAGS
# ===========================================

# Habilitar modo de desenvolvimento
VITE_DEV_MODE=true

# Habilitar logs detalhados
VITE_DEBUG=true

# ===========================================
# EXTERNAL SERVICES (FUTURO)
# ===========================================

# Google Analytics ID
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN para monitoramento de erros
# VITE_SENTRY_DSN=https://xxx@sentry.io/xxx

# ===========================================
# PWA CONFIGURATION (FUTURO)
# ===========================================

# Nome da aplicação PWA
VITE_APP_NAME=WhatsClone

# Descrição da aplicação
VITE_APP_DESCRIPTION=Um clone moderno do WhatsApp

# Cor do tema da aplicação
VITE_THEME_COLOR=#25D366
